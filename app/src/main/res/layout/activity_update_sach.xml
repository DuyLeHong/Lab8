<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ActivityUpdateSach">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sửa sách"
        android:textColor="#3F51B5"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_ten_sach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập tên sách" />

    <EditText
        android:id="@+id/edt_nam_xb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập năm XB" />

    <EditText
        android:id="@+id/edt_tac_gia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập tác giả" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lưu" />

</LinearLayout>